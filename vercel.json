{
  "version": 2,
  "builds": [
    {
      "src": "react frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "cleanUrls": true
      }
    }
  ],
  "rewrites": [
    {
      "source": "/assets/(.*)",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "source": "/(.*)",
      "destination": "/",
      "headers": {
        "Cache-Control": "no-cache"
      }
    }
  ]
}
